<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="horizontal">
  
			<LinearLayout
				android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
  				android:id="@+id/llCorpItem"
		  		android:orientation="horizontal">
  <TextView
    android:id="@+id/tvName"
	android:paddingLeft="10px"
	android:paddingTop="10px"
	android:paddingBottom="10px"
    android:textSize="15px"
    android:textColor="#ff555555"
    android:textStyle="bold"
   	android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
  <TextView
	android:id="@+id/tvData"
	android:paddingLeft="10px"
	android:paddingTop="10px"
	android:paddingBottom="10px"
    android:textSize="15px"
    android:textColor="#ff999999"
    android:textStyle="bold"
   	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@id/tvName"/>
    </LinearLayout>
    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/listview_coin_haut_gauche"
				android:id="@+id/ivCoinHautGauche"/>
 			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/listview_coin_haut_droite"
			    android:layout_alignRight="@id/llCorpItem"
				android:id="@+id/ivCoinHautDroite"/>
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:layout_alignLeft="@id/llCorpItem"
			    android:layout_alignBottom="@id/llCorpItem"
				android:src="@drawable/listview_coin_bas_gauche"
				android:id="@+id/ivCoinBasGauche"/>
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:layout_alignRight="@id/llCorpItem"
			    android:layout_alignBottom="@id/llCorpItem"
				android:src="@drawable/listview_coin_bas_droite"
				android:id="@+id/ivCoinBasDroite"/>
 			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/fleche_bas"
			    android:layout_alignRight="@id/llCorpItem"
			    android:id="@+id/ivFlecheBas"
			    android:layout_centerVertical="true"
			    android:layout_marginRight="8px"
			    android:visibility="gone"/>
 			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/fleche_haut"
			    android:layout_alignRight="@id/llCorpItem"
			    android:id="@+id/ivFlecheHaut"
			    android:layout_centerVertical="true"
			    android:layout_marginRight="8px"
				android:visibility="gone"/>
</RelativeLayout>


