<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/ll_item_wc">
  <!-- <?xml version="1.0" encoding="ISO-8859-1"?> -->
  
	<RelativeLayout
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent">
  		<LinearLayout
			android:layout_width="fill_parent" 
			android:id="@+id/llCorpCours"
	  		android:layout_height="wrap_content"
	  		android:orientation="vertical">
		    <TextView
		    	android:id="@+id/tv_item_wc_heure"
		    	android:textSize="25dip"
				android:paddingLeft="5sp"
		    	android:textColor="#ff000000"
			    android:layout_height="fill_parent"
			    android:layout_width="wrap_content"/>
		    <!-- <TextView
		    	android:id="@+id/tv_item_wc_date"
		    	android:textSize="25dip"
		    	android:textColor="#ff000000"
			    android:layout_height="fill_parent"
			    android:layout_width="wrap_content"/> -->
		    <TextView
		    	android:id="@+id/tv_item_wc_duree"
		    	android:textSize="25dip"
				android:paddingLeft="5sp"
		    	android:textColor="#ff000000"
			    android:layout_height="fill_parent"
			    android:layout_width="wrap_content"/>
		    <TextView
		    	android:id="@+id/tv_item_wc_matiere"
		    	android:textSize="25dip"
				android:paddingLeft="5sp"
		    	android:textColor="#ff000000"
			    android:layout_height="fill_parent"
			    android:layout_width="wrap_content"/>
		    <TextView
		    	android:id="@+id/tv_item_wc_salle"
		    	android:textSize="25dip"
				android:paddingLeft="5sp"
		    	android:textColor="#ff000000"
			    android:layout_height="fill_parent"
			    android:layout_width="wrap_content"/>
		    <TextView
		    	android:id="@+id/tv_item_wc_prof"
		    	android:textSize="25dip"
				android:paddingLeft="5sp"
		    	android:textColor="#ff000000"
			    android:layout_height="fill_parent"
			    android:layout_width="wrap_content"/>
	    </LinearLayout>
		<ImageView
			android:id="@+id/ivCoinHautGauche"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/listview_coin_haut_gauche"/>
		<ImageView
			android:id="@+id/ivCoinHautDroite"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/listview_coin_haut_droite"
		    android:layout_alignRight="@id/llCorpCours"/>
		<ImageView
			android:id="@+id/ivCoinBasGauche"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:layout_alignLeft="@id/llCorpCours"
		    android:layout_alignBottom="@id/llCorpCours"
			android:src="@drawable/listview_coin_bas_gauche"/>
		<ImageView
			android:id="@+id/ivCoinBasDroite"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:layout_alignRight="@id/llCorpCours"
		    android:layout_alignBottom="@id/llCorpCours"
			android:src="@drawable/listview_coin_bas_droite"/>
	</RelativeLayout>
</LinearLayout>
